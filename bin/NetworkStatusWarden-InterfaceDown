#!/bin/bash
#
# Short:    Do something when the any network interface goes down
# Author:   Mark J Swift
# Version:  1.0.5
# Modified: 10-Jun-2018
#
# Called by NetworkStateWarden as follows:    
#   NetworkStatusWarden-InterfaceDown <InterfaceName>

# ---

# assume that all scripts are in a subdirectory off the main project directory
GLB_sv_ProjectDirPath="$(dirname $(dirname ${0}))"

# Include the CommonLib
. "${GLB_sv_ProjectDirPath}/inc/Common.sh"

# Exit if something went wrong unexpectedly
if test -z "${GLB_sv_ProjectName}"
then
  exit 90
fi

# ---

sv_NetworkInterface="${1}"

# ---

GLB_nf_logmessage ${GLB_iv_MsgLevelNotice} "Network interface down - '${sv_NetworkInterface}'"

say "Network interface down - $(echo "${sv_NetworkInterface}" | sed "s|\(.\)|\1 |g")"
