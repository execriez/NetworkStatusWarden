#!/bin/bash
#
# Called by NetworkStatusWarden as root like this:
#   NetworkStatusWarden-InterfaceDown "InterfaceName"
# i.e.
#   NetworkStatusWarden-InterfaceDown "en0"

# Get interface name
sv_InterfaceName="${1}"

# Do something
say "Network interface down - $(echo "${sv_InterfaceName}" | sed "s|\(.\)|\1 |g")"
